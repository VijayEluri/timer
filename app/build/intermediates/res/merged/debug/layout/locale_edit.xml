<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/edu.mit.locale"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_margin="5dp"
		android:id="@+id/frame"
	>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
		>
			<name.boyle.chris.timer.NumberPicker
				android:id="@+id/picker"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"
				android:prompt="@string/plugin_name" />
			<TextView android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				style="?android:attr/textAppearance"
				android:textColor="@android:color/primary_text_light"
				android:textSize="20sp" android:gravity="left|center" android:text="@string/mins_since"/>
		</LinearLayout>
		<Spinner android:id="@+id/spinner"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
		/>
	</LinearLayout>
</LinearLayout>
